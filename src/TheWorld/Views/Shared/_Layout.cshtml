<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>The World - @ViewBag.Title</title>
    <!-- we need to use '~/' in front so that MVC knows how to find
    out CSS file. '~/' is the project root directory -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div id="sidebar">
        <img src="~/img/user1.jpg" alt="headshot" class="headshot" />
        <span id="username">Sam Hastings</span>
        <ul class="menu">
            <!-- here we are going to use MVC helpers 'asp-*' -->
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle Menu</button>
            </div>

            <div>
                @RenderBody()
            </div>

        </div>

        <footer>
            &copy; 2015 The World Ltd.
        </footer>
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>

    @RenderSection("Scripts" /*see e.g. Contact.cshtml*/, false /*not required*/)
</body>
</html>
